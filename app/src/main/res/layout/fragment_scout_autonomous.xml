<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/autonomous_explanation"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/auto_left"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@id/explanation"
        android:orientation="vertical">

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingSpinnerView
            android:id="@+id/start_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-start_position"
            app:label="Starting Position"
            app:values="@array/position_match"
            app:sortThis="false" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCheckboxView
            android:id="@+id/drive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-drive"
            app:label="Reaches Baseline" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingNumberView
            android:id="@+id/auto_high_shots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-high_shots"
            app:label="High Shots Made"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingNumberView
            android:id="@+id/auto_high_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-high_time"
            app:label="High Goal Time" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/auto_hopper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-hopper"
            app:label="Hoppers Released" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/auo_right"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@id/explanation"
        android:layout_toRightOf="@+id/auto_left"
        android:orientation="vertical">

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingSpinnerView
            android:id="@+id/auto_gear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-gear"
            app:label="Gear"
            app:values="@array/auto_gear"
            app:sortThis="false" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingNumberView
            android:id="@+id/auto_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="auto-time"
            app:label="Gear Speed"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingNumberView
            android:id="@+id/auto_low_shots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-low_shots"
            app:label="Low Shots Made"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingNumberView
            android:id="@+id/auto_low_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="auto-low_time"
            app:label="Low Goal Time" />

    </LinearLayout>

</RelativeLayout>